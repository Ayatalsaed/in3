{
  "name": "n3-ts",
  "version": "1.0.0",
  "description": "Typescript-version of the incubed client/server",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc -p . && cp src/types/registry.json js/src/types/registry.json",
    "test": "nyc mocha --timeout 5000 -R $(pwd)/js/test/utils/mochaReporter --require ts-node/register --require source-map-support/register  --full-trace --bail  test/*/*.ts; cp -r coverage test/report/",
    "updateContract": "solc --optimize --combined-json abi,bin,bin-runtime,compact-format,hashes,interface,metadata contracts/*.sol > src/types/registry.json",
    "start": "node --inspect js/server/server",
    "updateTypes": "dtsgen src/types/config.yaml | tail -n +2 | sed -e '$ d' | sed -e '$ d' > src/types/config.ts ",
    "parity": "docker run -p 8180:8180 -p 8545:8545 -p 8546:8546 slockit/parity-in3:latest --jsonrpc-apis all --logging=3 --jsonrpc-interface=all --ws-interface=all ---chain dev --gas-cap=8000000 --gasprice 0  --reseal-min-period 0   --gas-floor-target 8700000"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slockit/n3-ts.git"
  },
  "author": "Simon Jentzsch",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/slockit/n3-ts/issues"
  },
  "homepage": "https://github.com/slockit/n3-ts#readme",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/koa": "^2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.27",
    "@types/mocha": "^5.2.0",
    "@types/winston": "^2.3.8",
    "chai": "^4.1.2",
    "dtsgenerator": "^0.9.9",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-account": "^2.0.5",
    "ethereumjs-tx": "^1.3.4",
    "ethereumjs-vm": "^2.3.5",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "merkle-patricia-tree": "^2.3.1",
    "winston": "^2.4.2"
  }
}
